{
    "title": "Example Schema",
    "type": "object",
    "properties": {
        "firstName": {
            "type": "string",
            "minLength": 2,
            "maxLength": 10,
            "pattern": "^[P|p]e",
        },
        "lastName": {
            "type": "string"
        },
        "age": {
            "description": "Age in years",
            "type": "integer",
            "minimum": 10,
            "exclusiveMinimum": false,
        },
        "slicesOfPizza":{
            "description": "Slices of pizza per day",
            "type": "integer",
            "maximum": 4,
            "exclusiveMaximum": true,
        },
        "meals":{
            "description": "meals per day",
            "type": "integer",
            "multipleOf": 0,
        },
        "children":{
            "description": "kids",
            "type": "array",
            "items":[{},{}],
            "additionalItems":true,
        },
        "pets":{
            "description": "animals in the house",
            "type": "array",
            "maxItems": 4,
            "minItems": 1,
            "uniqueItems":true,
        }
        
    },
    "required": ["firstName", "lastName"]
}